@model UserUpdateDTO
@{
    ViewData["Title"] = "Settings";
}

<link href="~/css/auth.css" rel="stylesheet" />

<div class="wrapper fadeInDown">
    <div id="formContent">
        <!-- Tabs Titles -->
        <!-- Icon -->
        <div class="fadeIn first">
            <img src="https://www.kindpng.com/picc/m/24-248394_user-icon-hd-png-download.png" id="icon" alt="User Icon" />
            <br />
            <h2 style="margin:0px;">Register</h2>
        </div>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        @if (TempData["message"] != null)
        {
                <div class="text-success">@TempData["message"]</div>
        }

        <!-- Register Form -->
        <form asp-action="Edit">
            <input asp-for="Email" class="fadeIn second" placeholder="New Email" />
            <br />
            <span asp-validation-for="Email" class="text-danger"></span>

            <input asp-for="Username" class="fadeIn third" placeholder="New Username" />
            <br />
            <span asp-validation-for="Username" class="text-danger"></span>

            <input asp-for="Password" class="fadeIn fourth" placeholder="Password" />
            <br />
            <span asp-validation-for="Password" class="text-danger"></span>

            <input type="submit" value="Edit" class="fadeIn fifth" />
        </form>

       
    </div>
</div>